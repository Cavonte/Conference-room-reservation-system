<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_room_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.skynetprojectapp.android.skynetprojectapp.RoomDetailActivity"
    tools:showIn="@layout/activity_room_detail"
    android:orientation="vertical">



    <android.support.v7.widget.AppCompatTextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:text="Room information"
        android:typeface="normal"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="10sp"
        android:textAlignment="viewStart"
        android:layout_marginTop="10dp"/>


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-condensed"
        android:typeface="normal"
        android:textSize="20dp"
        android:text="RoomId"
        android:id="@+id/roomId"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="176dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="RoomNumber"
        android:id="@+id/RoomNumber"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-condensed"
        android:typeface="normal"
        android:textSize="20dp"
        android:text="Description"
        android:id="@+id/Description"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-condensed"
        android:typeface="normal"
        android:textSize="20dp"
        android:text="RoomSize"
        android:id="@+id/RoomSize"/>





</LinearLayout>
